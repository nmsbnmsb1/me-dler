{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2018",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true,
		"ignoreDeprecations": "5.0",
		"sourceMap": true,
		"esModuleInterop": true,
		"declaration": true,
		"outDir": "lib",
		"baseUrl": ".",
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
